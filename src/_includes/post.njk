{% from "multiliangblock.njk" import langBlock, centerImage, postlist %}
<div class="row">
    {% include "intro.njk" %}
</div>

<div class="row text-right">
<p style="color: #655d56">{{date}}</p>
</div>

<!-- todo, reapat this pattern, make collapsible, images in middle -->
<div class="row">
    <div class="medium-6 small-12 columns" lang="jp">
        <header><h1>{{title_jp}}</h1></header>
    </div>
    <div class="medium-6 small-12 columns" lang="fi">
        <header><h1>{{title_fi}}</h1></header>
    </div>
</div>
<div class="row">
    {% block content %}
    {{ content }}
    {% endblock %}
</div>

<!-- post list -->
<div class="row">
    <div class="show-for-medium medium-6 small-12 columns" lang="jp">
        <ul>
            {% for post in collections.posts %}
            <li><a href="{{ post.url }}">{{ post.data.title_jp }}</a></li>
            {% endfor %}
            </ul>            
    </div>
    <div class="show-for-medium medium-6 small-12 columns" lang="fi">
        <ul>
            {% for post in collections.posts %}
            <li><a href="{{ post.url }}">{{ post.data.title_fi }}</a></li>
            {% endfor %}
            </ul>            
    </div>
    <div class="hide-for-medium small-12 columns" lang="jp">
        <ul>
            {% for post in collections.posts %}
            <li><a href="{{ post.url }}">{{ post.data.title_jp }}</a></li>
            <li><a href="{{ post.url }}">{{ post.data.title_fi }}</a></li>
            {% endfor %}
            </ul>            
    </div>
</div>